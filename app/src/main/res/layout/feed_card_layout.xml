<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/Feed_imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/testimage"
                android:tint="#5F000000"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:padding="1dp" />

            <TextView
                android:id="@+id/Title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignLeft="@+id/Feed_imageView"
                android:layout_alignBottom="@id/Feed_imageView"
                android:layout_margin="4dp"
                android:text="Apple MacBook Air Core i5 5th Gen"
                style="@style/WhiteTextWithShadow"
                android:textSize="@dimen/headline_size"
                />

            <TextView
                android:id="@+id/Date_textView"
                style="@style/WhiteTextWithShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textStyle="italic"
                android:layout_margin="2dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="Today's Date" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>